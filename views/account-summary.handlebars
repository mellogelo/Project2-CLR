<section id="account-summary">
    <div class="container">
        <div class="row justify-content-center">
            <h1>Bootcamp Forex</h1>
        </div>
        <div class="row justify-content-center">
            <h2>{{summary.fullName}} Account Summary</h2>
        </div>
        <hr style="color: white;" />
        <div class="row" id="container-row">
            <!--Left Half of the screen-->
            <div class="col-md-6">
                <div id="overview-left">
                    <h3>Base Currency <span class="badge badge-secondary">{{summary.baseCurrency.country}}
                            {{summary.baseCurrency.name}} &#x{{summary.baseCurrency.symbolUnicodeHex}};</span></h3>
                    <h3>Account Value <span class="badge badge-secondary">&#x{{summary.baseCurrency.symbolUnicodeHex}};
                            {{summary.currentAccountValue}}</span></h3>
                </div>
            </div>
            <!-- Right Halp of the screen -->
            <div class="col-md-6">
                <div id="overview-right">
                    <h3>Initial Investment <span class="badge badge-secondary"
                            style="background-color: lightcoral;">&#x{{summary.baseCurrency.symbolUnicodeHex}};
                            {{summary.initialAmount}}</span></h3>
                    <h3>Available <span class="badge badge-secondary" style="background-color: lightcoral;">&#x{{summary.baseCurrency.symbolUnicodeHex}};
                            {{summary.available}}</span></h3>
                </div>
            </div>
        </div>

        <hr style="color: white;" />
        <div>
          <div class="row justify-content-around">
            <p>Select Currency to buy and enter the amount of Base currency to use in purchase</p>
          </div>
          <div class="row justify-content-around">
            <div>
              <label for="acct-summ-currency-dropdown" style="font-weight: bold;">Currency Code</label>
              <select id="acct-summ-currency-dropdown">
                <option selected>Choose...</option>
                {{#each summary.rates}}
                  <option value="{{this.code}}">{{this.code}} @ {{this.rate}}</option>
                {{/each}}
              </select>
            </div>
            <div>
              <label for="acct-summ-buy-amount" style="font-weight: bold;">Amount</label>
              <input type="number" id="acct-summ-buy-amount" />
            </div>
            <div>
              <button class="btn btn-success acct-summ-buy-btn" type="button" id="acct-summ-buy-btn">
                Buy
              </button>
            </div>
          </div>
        </div>

        <hr style="color: white;" />
        <div class="row">
            <div class="col-md-6">
                <h3>Positions:</h3>
            </div>
            <div class="col-md-6">
                <h5 id="account-summary-message" style="font-style: italic; color: red;"></h5>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Country</th>
                            <th scope="col">Currency</th>
                            <th scope="col">Symbol</th>
                            <th scope="col">Code</th>
                            <th scope="col">Amount</th>
                            <th scopr="col">Rate</th>
                            <th scope="col">Trade</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each summary.positions}}
                        <tr>
                            <th scope="row">{{country}}</th>
                            <td>{{name}}</td>
                            <td>&#x{{symbolUnicodeHex}};</td>
                            <td>{{code}}</td>
                            <td>{{amount}}</td>
                            <td>{{rate}}</td>
                            <td style="text-align: center;">
                                <!-- <button type="button" class="btn btn-primary">Sell</i></button> -->
                                <input type="text" placeholder="Amount" id="pos-inp-{{code}}" />
                                <button class="btn btn-primary btn-sell" data-code="{{code}}" type="button"
                                    id="button-addon2">Sell</button>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

  <!-- Logoff Modal -->
  <div class="modal fade" id="logoff-modal">
    <div class="modal-dialog modal-sm">
      <div class="modal-content" style="background-color: darkslategray;">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Confirmation</h4>
        </div>
        <div class="modal-body">
          <p>Do you really want to logoff the application?</p>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" id="logoff-modal-confirm-btn" class="btn btn-danger" data-dismiss="modal">Confirm</button>
          <button type="button" id="logoff-modal-cancel-btn" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</section>